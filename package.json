{
  "name": "look-it-up",
  "version": "1.1.2",
  "description": "Find a file or directory by walking up parent directories recursively. Zero dependency.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf .cache dist coverage",
    "dts": "tsc -d --emitDeclarationOnly --declarationDir .cache",
    "bundle": "rollup -c",
    "build": "yarn clean && yarn dts && yarn bundle",
    "lint": "ts-standardx",
    "lint:fix": "ts-standardx --fix",
    "test": "yarn lint && yarn build && jest --no-cache"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exuanbo/look-it-up.git"
  },
  "keywords": [
    "look-up",
    "find-up",
    "path",
    "file",
    "directory",
    "search",
    "match",
    "recursive"
  ],
  "author": "exuanbo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exuanbo/look-it-up/issues"
  },
  "homepage": "https://github.com/exuanbo/look-it-up#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "6.1.0",
    "@types/jest": "26.0.20",
    "jest": "26.6.3",
    "rollup": "2.39.0",
    "rollup-plugin-dts": "1.4.14",
    "ts-jest": "26.5.1",
    "ts-standardx": "0.7.0",
    "tslib": "2.1.0",
    "typescript": "4.1.5"
  }
}
